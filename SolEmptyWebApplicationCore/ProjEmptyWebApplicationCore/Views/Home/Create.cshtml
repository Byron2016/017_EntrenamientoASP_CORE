@model EmployeeCreateViewModel

@{
    ViewBag.Title = "Create Employee";
}

<form enctype="multipart/form-data" asp-controller="Home" asp-action="Create" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="input-group mb-3">
        <label asp-for="Name" class="col-sm-2 col-form-label">Nombre</label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Nombre" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="input-group mb-3">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="input-group mb-3">
        <label asp-for="Department" class="col-sm-2 col-form-label">Departamento</label>
        <div class="col-sm-10">
            <select asp-for="Department" class="form-select mr-2-ms-2" asp-items="Html.GetEnumSelectList<Dept>()">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
    </div>

    <div class="input-group mb-3">
        <label asp-for="Photos" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="">
                <input asp-for="Photos" type="file" class="form-control custom-file-input" multiple />
                @*<label class="custom-file-label">Choose file...</label>*@
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>
