@model Employee

@{
    ViewBag.Title = "Create Employee";
}

<form asp-controller="Home" asp-action="Create" method="post" class="mt-3">
    <div class="input-group mb-3">
        <label asp-for="Name" class="col-sm-2 col-form-label">Nombre</label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" />
        </div>
    </div>
    <div class="input-group mb-3">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" />
        </div>
    </div>
    <div class="input-group mb-3">
        <label asp-for="Department" class="col-sm-2 col-form-label">Departamento</label>
        <div class="col-sm-10">
            <select asp-for="Department" class="form-select mr-2-ms-2" asp-items="Html.GetEnumSelectList<Dept>()"></select>
        </div>

    </div>

    <div class="form-group">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>

</form>
