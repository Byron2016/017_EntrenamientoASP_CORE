@model EmployeeEditViewModel

@{
    ViewBag.Title = "Edit Employee";
    var photoPath = "~/images/" + (Model.ExistingPhotoPath ?? "noimage.png");
}

<form enctype="multipart/form-data" asp-controller="Home" asp-action="Edit" method="post" class="mt-3">
    <input hidden asp-for="Id" />
    <input hidden asp-for="ExistingPhotoPath" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="input-group mb-3">
        <label asp-for="Name" class="col-sm-2 col-form-label">Nombre</label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Nombre" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="input-group mb-3">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="input-group mb-3">
        <label asp-for="Department" class="col-sm-2 col-form-label">Departamento</label>
        <div class="col-sm-10">
            <select asp-for="Department" class="form-select mr-2-ms-2" asp-items="Html.GetEnumSelectList<Dept>()">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
    </div>

    <div class="input-group mb-3">
        <label asp-for="Photos" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="">
                <input asp-for="Photos" type="file" class="form-control custom-file-input" multiple />
                <label for="Photos" class="form-label">Cambiar foto</label>
            </div>
        </div>
    </div>

    <div class="form-group row col-sm-4 offset-4">
        <img class="imageThumbnail" src="@photoPath" asp-append-version="true">
    </div>

    <div class="form-group">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="home" asp-action="index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>