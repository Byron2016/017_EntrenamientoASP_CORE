@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
}

<div class="card-group">
    @foreach (var employee in Model)
    {
    <div class="card m-3" style="width: 18rem;">
        <div class="card-header">
            <h3>@employee.Name</h3>
        </div>
        <img class="card-img-top" src="~/images/noimage.png">

        <div class="card-footer text-center">
            <a href="/home/details/@employee.Id" class="btn btn-primary">View F1</a>

            @Html.ActionLink("View F2", "details", "home", new { id = @employee.Id })

            <a href="@Url.Action("details", "home", new { id = employee.Id })" class="btn btn-primary">Show F3</a>

            <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary">View F4</a>

            <a href="#" class="btn btn-primary">Edit</a>
            <a href="#" class="btn btn-danger">Delete</a>
        </div>
    </div>
    }
</div>
