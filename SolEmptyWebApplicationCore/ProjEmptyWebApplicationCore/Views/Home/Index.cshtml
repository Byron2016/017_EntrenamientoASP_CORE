@model IEnumerable<ProjEmptyWebApplicationCore.Models.Employee>
    
@{ 
    ViewBag.Title = "Employee List";
}
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Departamento</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Department</td>
            </tr>
            }
        </tbody>
        <tr>
            <td></td>
        </tr>
    </table>



